{
  "name": "web-client-errors-mcp",
  "version": "1.0.0",
  "description": "MCP server for detecting and analyzing client-side web errors - perfect for AI coding agents using CRUSH",
  "main": "dist/core/mcp-server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "bun dist/index.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "browser-errors",
    "web-monitoring",
    "crush",
    "ai-agents",
    "playwright",
    "error-detection",
    "client-side-errors",
    "javascript-errors"
  ],
  "author": "Lars Artmann <lars@artmann.ai>",
  "license": "MIT",
  "dependencies": {
    "@logtape/logtape": "^1.2.2",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "playwright": "^1.57.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^24.10.2",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LarsArtmann/web-client-errors-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/LarsArtmann/web-client-errors-mcp/issues"
  },
  "homepage": "https://github.com/LarsArtmann/web-client-errors-mcp#readme"
}