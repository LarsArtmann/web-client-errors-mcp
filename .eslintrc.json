{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "no-redeclare": "off",
    "@typescript-eslint/no-redeclare": ["error", {
      "ignoreDeclarationMerge": true
    }]
  },
  "env": {
    "node": true,
    "es2022": true
  }
}
